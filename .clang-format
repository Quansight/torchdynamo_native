---
BasedOnStyle: LLVM
IndentWidth: 2
---
Language: Cpp
Standard: c++14

ColumnLimit: 100

# Always break after open bracket.
AlignAfterOpenBracket: BlockIndent

# If too long, go to the next line, indent, and
# align the rest (arguments and parameters).
AllowAllArgumentsOnNextLine: false
AllowAllParametersOfDeclarationOnNextLine: false
BinPackArguments: false
BinPackParameters: false

# If too long, go to the next line, indent, and
# align the rest (initializers).
BreakConstructorInitializers: AfterColon
PackConstructorInitializers: Never

# All functions are multi-line.
AllowShortFunctionsOnASingleLine: false

# Only break on functions, classes, and namespaces.
BreakBeforeBraces: Linux

AlwaysBreakTemplateDeclarations: Yes
...
